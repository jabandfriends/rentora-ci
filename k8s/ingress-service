apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: rentora-ingress
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
spec:
  tls:
    - hosts:
        - rentora.teamforge.cloud       # Frontend domain
      secretName: frontend-tls
    - hosts:
        - api.teamforge.cloud   # Backend API domain
      secretName: backend-tls
  rules:
    # Frontend
    - host: rentora.teamforge.cloud
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: rentora-frontend
                port:
                  number: 80

    # Backend API
    - host: api.teamforge.cloud
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: rentora-backend-service
                port:
                  number: 8081
